# mod_rewrite starts here

RewriteEngine on

# does not apply to exsisting directories, meaning that if the folder exsist on the server then don't change
anything and dont't run the rule!

RewriteCond %{REQUEST_FILENAME} !-d

# Check for file in directory with .html extension

RewriteCond %{REQUEST_FILENAME}/.html -f

# Here we actually show the page that has the .html 

RewriteRule ^(.*)$ $1.html [NC,L]

